<Page x:Class="ChatWpf.Views.LoginPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="LoginPage"
      DataContext="{Binding LoginVm, Source={StaticResource Locator}}">

    <Grid>
        <!-- Progress Indicator -->
        <TextBlock Text="Loading ..." 
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center"
                   Panel.ZIndex="10"
                   FontSize="16"
                   Visibility="{Binding IsBusy, Mode=OneWay, Converter={StaticResource BoolToVisibilityConverter}}"/>

        <Border VerticalAlignment="Center"
                HorizontalAlignment="Center"
                BorderBrush="Black"
                BorderThickness="1,0">
            <StackPanel Width="400">
                <StackPanel.InputBindings>
                    <KeyBinding Key="Return"
                                    Command=""/>
                </StackPanel.InputBindings>

                <!-- Server Error -->
                <TextBlock Text="{Binding ServerError, Mode=OneWay}"
                           Foreground="Red"
                           TextWrapping="Wrap"/>

                <!-- Username label -->
                <TextBlock Text="Username"/>

                <!-- Username Text Field -->
                <TextBox Margin="10"
                             Text="{Binding Username, Mode=TwoWay}"/>

                <!-- Password label -->
                <TextBlock Text="Password"/>

                <!-- Password Text Field -->
                <PasswordBox x:Name="PasswordInput" 
                                 Margin="10">
                    <i:Interaction.Triggers>
                        <i:EventTrigger EventName="PasswordChanged">
                            <i:InvokeCommandAction Command="{Binding PasswordChangedCommand}"
                                                       CommandParameter="{Binding ElementName=PasswordInput}"/>
                        </i:EventTrigger>
                    </i:Interaction.Triggers>
                </PasswordBox>

            <!-- Create an account link -->
            <Button BorderThickness="0"
                    HorizontalAlignment="Left"
                    Margin="10,0"
                    Background="Transparent"
                    Command="{Binding GoToRegisterCommand}">
                <TextBlock Foreground="Blue"
                           Text="Create an account"/>
            </Button>

                <!-- Login button -->
                <Button Content="Login"
                            Margin="10"
                            HorizontalAlignment="Right"
                            IsDefault="True"
                            IsEnabled="{Binding CanLogin, Mode=OneWay}"
                            Command="{Binding LoginCommand}"/>

            </StackPanel>
        </Border>
    </Grid>
</Page>
