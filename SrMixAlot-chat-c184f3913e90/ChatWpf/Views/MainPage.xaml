<Page x:Class="ChatWpf.Views.MainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ChatWpf.Views"
      xmlns:controls="clr-namespace:ChatWpf.Controls"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="MainPage"
      DataContext="{Binding MainVm, Source={StaticResource Locator}}">
    <Page.Resources>
        <ResourceDictionary>
            <DataTemplate x:Key="ChatChooserListItem">
                <TextBlock Text="{Binding DisplayName}"/>
            </DataTemplate>
        </ResourceDictionary>
    </Page.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Available Chat Rooms -->
        <ListView Margin="4" 
                  BorderBrush="Black"
                  BorderThickness="0,0,1,0"
                  SelectedItem="{Binding SelectedChatRoom, Mode=TwoWay}" 
                  ItemsSource="{Binding AvailableChatRooms, Mode=OneWay}"
                  ItemTemplate="{StaticResource ChatChooserListItem}"/>

        <controls:ChatRoomControl Grid.Column="1" 
                                  Margin="4"
                                  DataContext="{Binding SelectedChatRoom}"/>

    </Grid>
</Page>
