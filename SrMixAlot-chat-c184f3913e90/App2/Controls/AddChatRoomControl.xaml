<UserControl
    x:Class="Chat.Controls.AddChatRoomControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="300"
    d:DesignWidth="400">

    <StackPanel BorderBrush="Black"
                BorderThickness="1"
                Background="White"
                Visibility="{x:Bind ViewModel.IsOpen, Mode=OneWay}">
        
        <!-- Room Name -->
        <TextBox Margin="4" 
                 Header="Room Name: " 
                 Text="{x:Bind ViewModel.ChatRoomModel.DisplayName, Mode=TwoWay}"/>

        <!-- Submit button -->
        <Button Margin="4" 
                Content="Submit"
                HorizontalAlignment="Right"
                Click="{x:Bind ViewModel.Submit}" />

    </StackPanel>
</UserControl>
