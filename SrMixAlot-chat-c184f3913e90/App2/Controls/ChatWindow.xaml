<UserControl
    x:Class="Chat.Controls.ChatWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:models="using:Chat.Models">
    <UserControl.Resources>
        <ResourceDictionary>
            <DataTemplate x:DataType="models:ChatMessage" x:Key="ChatMessageListItemTemplate">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Image Grid.Column="0" Source="{x:Bind User.ImageFilePath}"/>
                    <TextBlock Grid.Column="1" Foreground="Black" Text="{x:Bind Message, Mode=OneWay}"/>
                </Grid>
            </DataTemplate>
        </ResourceDictionary>
    </UserControl.Resources>
    <Grid>
        <ListView BorderBrush="Black"
                  BorderThickness="1"
                  ItemsSource="{x:Bind ChatEntries}" 
                  ItemTemplate="{StaticResource ChatMessageListItemTemplate}"/>
    </Grid>
</UserControl>
